thing AirConditionner {
	message sendTemp()
	message recTemp()
	required port HW {
		sends sendTemp receives recTemp
	}
	statechart Temperature init Greetings {
		state Greetings {
			transition -> Bye action do
				print "Hello World!\n"
			end
		}
		state Bye {
			on entry print "Bye.\n"
		}
	}
}
configuration myAirConditionner {
	instance temp : AirConditionner
}
