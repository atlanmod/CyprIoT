thing Monitor {
	message sendTemp()
	message recTemp()
	required port inout {
		sends sendTemp receives recTemp
	}
	statechart Monitor init Greetings {
		state Greetings {
			transition -> Bye action do
				print "Hello World!\n"
			end
		}
		state Bye {
			on entry print "Bye.\n"
		}
	}
}
protocol MQTT @serializer "JSON" ;

configuration myMonitor {
	instance monitor : Monitor
	connector monitor.inout over MQTT
}
