thing AirConditionner {
	message sendTemp()
	message recTemp()
	required port inout {
		sends sendTemp receives recTemp
	}
	statechart Temperature init Greetings {
		state Greetings {
			transition -> Bye action do
				print "Hello World!\n"
			end
		}
		state Bye {
			on entry print "Bye.\n"
		}
	}
}
protocol MQTT @serializer "Binary" ;

configuration myAirConditionner {
	instance aircond : AirConditionner
	connector aircond.inout over MQTT
}
