thing HelloThing {
	message m(mess:UInt8)
	required port temperaturePort @sync_send "true"{
		sends m
	}
	statechart HelloStateChart init HelloState {
		
		final state HelloState {
			on entry
				do  println  "Hello World!"
					temperaturePort!m(362)
				end
		}
	}
}

datatype UInt8<1>
    @type_checker "Integer"
	@c_type "uint8_t"
	@java_type "byte"
	@js_type "byte"