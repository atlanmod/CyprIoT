import "includes/messages.thingml"


thing SmartLock includes LockMsg {
	
	required port CommunicatingLockStatePort {
		sends lockState
		receives lockState
	}
	statechart SmartLock init close {
		state close {}		
		state open {}
	}
}

configuration SmartLockCfg {
	instance smartLock:SmartLock
	connector smartLock.CommunicatingLockStatePort over X
} 