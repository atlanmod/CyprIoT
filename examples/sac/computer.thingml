import "includes/messages.thingml"


thing Computer includes tempMsgs {
	
	provided port dataEntryPoint {
		receives temperatureMessage
	}
	statechart computer init showData{
		state showData {
			internal
			event rec : dataEntryPoint?temperatureMessage
			action print "Current Temperature is : "+rec.TemperatureData
		}
	}
}

configuration computerCfg {
	instance computer:Computer
	connector computer.dataEntryPoint over MQTT
}
